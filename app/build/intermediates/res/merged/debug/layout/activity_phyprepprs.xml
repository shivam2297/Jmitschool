<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bookbg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.jmitschool.phyprepprs">
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/previousppr"
        android:padding="25dp"
        android:visibility="visible"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="104dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28dp"
            android:paddingTop="5dp"
            android:background="#77676a67"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:text="Paper 1"
            android:clickable="true"
            android:id="@+id/pppr1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:background="#77676a67"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:text="Paper 2"
            android:id="@+id/pppr2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:background="#77676a67"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Paper 3"
            android:textColor="#ffffff"
            android:clickable="true"
            android:id="@+id/pppr3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28dp"
            android:textStyle="bold"
            android:clickable="true"
            android:paddingTop="5dp"
            android:background="#77676a67"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Paper 4"
            android:textColor="#ffffff"
            android:id="@+id/pppr4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:background="#77676a67"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Paper 5"
            android:textColor="#ffffff"
            android:clickable="true"
            android:id="@+id/pppr5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28dp"
            android:textStyle="bold"
            android:clickable="true"
            android:paddingTop="5dp"
            android:background="#77676a67"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Paper 6"
            android:id="@+id/pppr6"/>
    </LinearLayout>
</RelativeLayout>
